# Copy this file to `.env` and adjust the values to match your environment.
# The default configuration expects a local PostgreSQL instance running on port 5432.
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/accura_api
# Uncomment the following line when connecting to Azure Database for PostgreSQL
# which typically requires SSL.
# DATABASE_SSL_MODE=require

# Security settings
SECRET_KEY=change_this_secret
ACCESS_TOKEN_EXPIRE_MINUTES=60

# SMTP configuration (optional)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_SENDER=

# SendGrid configuration (optional)
# SENDGRID_API_KEY=
# SENDGRID_API_KEY=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
